<% var title = "Solicitação" %>
<% include ../partials/header %>

<!-- <h1 class="text-center">Solicitação #<%= solicitacao.id %></h1> -->

<div class="container">
<div class="float-right">
  <button type="button" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Excluir</button>
  <button type="button" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Editar</button>
</div>

<a href="/solicitacoes">Voltar</a>
<h3 class="my-3">Informações:</h3>

<hr>
<h6>Data:</h6>
<p><%= moment(solicitacao.data).format('LLLL'); %></p>
<h6>Descrição:</h6>
<p><%= solicitacao.descricao %></p>
<h6>Quantidade:</h6>
<p><%= solicitacao.quantidade %></p>
<h6>Justificativa:</h6>
<p><%= solicitacao.justificativa %></p>
<h6>Status:</h6>
<p><%= solicitacao.status %></p>
<hr>

<a href="/solicitacoes/<%= solicitacao.id %>/orcamentos/edit" class="btn btn-success btn-sm float-right"><i class="fas fa-hand-holding-usd"></i> Editar Orçamento</a>
<h3>Orçamento:</h3>
<hr>


<table class="table table-bordered table-sm my-3 text-center align-middle">
  <thead>
      <tr>
        <th scope="col">CNPJ</th>
        <th scope="col">Fornecedor</th>
        <th scope="col">Valor R$</th>
        <th scope="col">Referencia</th>
        <th scope="col">Arquivo</th>
      </tr>
  </thead>
  <tbody>
  <% if(!(orcamentos === undefined || orcamentos.length == 0)) { %>
    <% orcamentos.forEach((orcamento) => { %>
    <tr>
      <td><%= orcamento.cnpj_fornecedor %></td>
      <td><%= orcamento.nome_fornecedor %></td>
      <td><%= orcamento.valor %></td>
      <td><%= orcamento.origem %></td>
      <td></td>
    </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>


<hr>

</div>

<% include ../partials/footer %>