<% var title = "Nova Solicitação" %>
<% include ../partials/header %>

<h1 class="text-center">Nova Solicitação</h1>

<form action="/solicitacoes" method="post">
  <div class="form-group">
    <label for="descricao">Descricão:</label>
    <textarea class="form-control" name="descricao" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="quantidade">Quantidade:</label>
    <input type="number" class="form-control col-2" name="quantidade" min="1" value="1">
  </div>
  <div class="form-group">
    <label for="justificativa">Justificativa:</label>
    <textarea class="form-control" name="justificativa" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Enviar</button>
  <a class="btn btn-link" href="/solicitacoes">Cancelar</a>
</form>

<% include ../partials/footer %>